<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Mi Wallet</title>
  <link rel="stylesheet" href="/css/transferStyle.css">
</head>
<body>
  <div class="login-container">
    <h2>Transferir Dinero</h2>
    <% if @show_form == false %>
      <% if @error %>
        <div class="error-message" style="margin-bottom: 20px;"><%= @error %></div>
        <form action="/transfer" method="get">
          <button type="submit">Volver</button>
        </form>
      <% elsif @success %>
        <div class="success-message" style="margin-bottom: 20px;"><%= @success %></div>
        <form action="/dashboard" method="get">
          <button type="submit">Volver</button>
        </form>
      <% end %>
    <% else %>
      <form action="/transfer" method="post">
        <label for="to_cvu">CVU destino:</label>
        <input type="text" id="to_cvu" name="to_cvu" placeholder="Ingrese el CVU" required>

        <label for="amount">Monto:</label>
        <input type="number" id="amount" name="amount" placeholder="Ej: 100.00" step="0.01" min="0" required>

        <div class="form-actions">
          <button type="submit">Transferir</button>
          <a href="/dashboard" class="btn-cancel">Cancelar</a>
        </div>
      </form>
    <% end %>
  </div>
</body>
</html>
