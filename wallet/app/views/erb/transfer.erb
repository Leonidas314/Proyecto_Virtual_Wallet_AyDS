<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Mi Wallet</title>
  <link rel="stylesheet" href="/css/transferStyle.css">
</head>
<body>
  <div class="login-container">
    <h2>Transferir Dinero</h2>

    <% if @show_form == false %>
      <% if @error %>
        <div class="error-message"><%= @error %></div>
        <div id="img-div-error"></div>

        <form action="/transfer" method="get">
          <button class="btn-volver" type="submit">Volver</button>
        </form>
      <% elsif @success %>
        <div class="success-message"><%= @success %></div>
        <div id="img-div-accept"></div>

        <form action="/dashboard" method="get">
          <button class="btn-volver" type="submit">Volver</button>
        </form>
      <% end %>
    <% else %>
      <form action="/transfer" method="post">
        <label for="to_cvu">CVU destino:</label>
        <input type="text" id="to_cvu" name="to_cvu" placeholder="Ingrese el CVU" required value="<%= params[:cvu] %>">

        <label for="amount">Monto:</label>
        <input type="number" id="amount" name="amount" placeholder="Ej: 100.00" step="0.01" min="0" required>

        <div class="form-actions button-row">
          <button type="submit">Transferir</button>
          <button type="button" onclick="window.location.href='/contactos'">Seleccionar contacto</button>
          <button type="button" onclick="window.location.href='/dashboard'">Cancelar</button>
        </div>
      </form>
    <% end %>
  </div>
</body>
</html>